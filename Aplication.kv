#<KvLang>

#:kivy 1.0.9



<MainScreen>:
    GridLayout:
        rows: 3
        padding: 20
        Button:
            size_hint: 0.2, 0.2
            text: 'Polski -> Kosmitowy' if root.translation_mode == 0 else 'Kosmitowy <- Polski'
            on_press: root.switch_mode()
        GridLayout:
            cols: 2
            padding: 5
            GridLayout:
                rows: 2
                Label:
                    size_hint: 0.2, 0.2
                    text: 'Polski'
                TextInput:
                    id: input
                    multiline: False
                    focus: True if root.translation_mode == 0 else False
                    disabled: True if root.translation_mode == 1 else False
                    on_text: root.update(self.text)
            GridLayout:
                rows: 2
                Label:
                    size_hint: 0.2, 0.2
                    text: 'Kosmitowy'
                TextInput:
                    id: output
                    multiline: False
                    focus: True if root.translation_mode == 1 else False
                    disabled: True if root.translation_mode == 0 else False
                    on_text: root.update(self.text)

        GridLayout:
            rows: 1
            size_hint: 0.2, 0.2
            Button:
                text: 'Dodaj słowo'
                on_press: root.manager.current = 'second'
            Button:
                text: 'Słowniczek'
                on_press: root.manager.current = 'third'
        
    


<SecondScreen>:
    GridLayout:
        rows: 2
        padding: 20
        GridLayout:
            cols: 2
            padding: 5
            GridLayout:
                rows: 2
                Label:
                    size_hint: 0.2, 0.2
                    text: 'Polski'
                TextInput:
                    id: input
                    focus: True
            GridLayout:
                rows: 2
                Label:
                    size_hint: 0.2, 0.2
                    text: 'Kosmitowy'
                TextInput:
                    id: output

        GridLayout:
            rows: 1
            size_hint: 0.2, 0.2 
            Button:
                text: 'Zapisz'
                on_press: root.save()
            Button:
                text: 'Tłumacz'
                on_press: root.manager.current = 'main'
            Button:
                text: 'Słowniczek'
                on_press: root.manager.current = 'third'

<ThirdScreen>:
    GridLayout:
        id: grid
        rows: 2
        ScrollView:
            id: view
            Dict_elements:
                id: dict_elements
                row_default_height: 50
                size_hint: 1, None
                height: self.minimum_height
        GridLayout:
            rows: 1
            size_hint: 0.2, 0.2 
            Button:
                text: 'Tłumacz'
                on_press: root.manager.current = 'main'
            Button:
                text: 'Dodaj słowo'
                on_press: root.manager.current = 'second'







            


#</KvLang>